variant: fcos
version: 1.5.0

passwd:
  users:
  {% for user in users %}
    - name: {{ user.name }}
      password_hash: {{ user.password }}
      {% if user.groups is defined %}
      groups:
      {% for group in user.groups %}
        - {{ group }}
      {% endfor %}
      {% endif %}
      {% if user.pubkeys is defined %}
      ssh_authorized_keys:
      {% for key in user.pubkeys %}
        - {{ key }}
      {% endfor %}
      {% endif %}
      {% if user.id is defined %}
      uid: {{ user.id }}
      {% endif %}
  {% endfor %}

{% if disks is defined %}
boot_device:
  mirror:
    devices:
      {% for disk in disks %}
      - {{ disk }}
      {% endfor %}
{% endif %}

storage:
  directories:
    {% for directory in directories %}
    - path: {{ directory }}
      mode: 0755
      user:
        name: root
      group:
        name: root
        
    {% endfor %}
    {% for mount in mounts %}
    - path: {{ mount.path }}
      mode: 0755
      user:
        name: root
      group:
        name: root

    {% for volume in mount.volumes %}
    - path: {{ mount.path }}/{{ volume }}
      mode: 0755
      user:
        name: root
      group:
        name: root

    {% endfor %}
    {% endfor %}
  files:
    - path: /etc/environment
      overwrite: true
      mode: 0644
      
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: {{ hostname }}.{{ domain }}

    - path: /etc/modules-load.d/zfs.conf
      mode: 0644
      contents:
        inline: zfs

    - path: /etc/samba/smb.conf
      overwrite: true
      mode: 0644
      contents:
        local: smb.conf

    {% for file in files %}
    - path: {{ file.path }}
      overwrite: true
      user:
        name: {{ file.user }}
      group:
        name: {{ file.group }}
      mode: {{ file.mode }}
      contents:
        inline: |
          {% filter indent(width=10) %}
          {{ file.contents }}
          {% endfilter %}
    {% endfor %}

    {% if rclone is defined and rclone | length > 0 %}
    - path: /root/.config/rclone/rclone.conf
      overwrite: true
      mode: 0644
      contents:
        local: rclone.conf
    {% endif %}

    {% for key in keys %}
    - path: {{ key.path }}
      overwrite: true
      user:
        name: {{ key.user }}
      group:
        name: {{ key.group }}
      mode: {{ key.mode }}
      contents:
        inline: |
          {% filter indent(width=10) %}
          {{ key.content }}
          {% endfilter %}
    {% endfor %}

    {% for rule in udev_rules %}
    - path: {{ rule.path }}
      overwrite: true
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        inline: |
          {% filter indent(width=10) %}
          {{ rule.content }}
          {% endfilter %}
    {% endfor %}

  links:
    - path: /etc/localtime
      target: ../usr/share/zoneinfo/America/New_York

    {% for link in links %}
    - path: {{ link.path }}
      target: {{ link.target }}

    {% endfor %}
  trees:
    - local: etc/
      path: /etc

systemd:
  units:
    {% set backup_targets = [] %}
    {% for container in containers if container.backup_path is defined %}
    {% set result = backup_targets.append(container) %}
    {% endfor %}
    {% if backup_targets | length > 0 %}
    - name: backup.target
      enabled: true

    {% endif %}
    {% set healthcheck_targets = [] %}
    {% for container in containers if container.backup_path is defined %}
    {% set result = healthcheck_targets.append(container) %}
    {% endfor %}
    {% if healthcheck_targets | length > 0 %}
    - name: healthcheck-container.target
      enabled: true

    {% endif %}
    - name: podman-auto-update.timer
      enabled: true

    - name: rpm-ostreed-automatic.timer
      enabled: true

    - name: smb.service
      enabled: true

    {% if mounts is defined and mounts | length > 0 %}
    {% for mount in mounts %}
    - name: {{ mount.path[1:] | replace("-", "\\x2d") | replace("/", "-") }}.mount
      enabled: true

    {% endfor %}
    {% endif %}
    - name: gssproxy.service
      mask: true
      enabled: false

    - name: zincati.service
      mask: true
      enabled: false