variant: fcos
version: 1.5.0

ignition:
  config:
    merge:
      - local: services/audiobookshelf.ign
      - local: services/calibre-web.ign
      - local: services/gotify.ign
      - local: services/homer.ign
      - local: services/jellyfin.ign
      # - local: services/mealie.ign
      - local: services/mkdocs.ign
      - local: services/plex.ign
      - local: services/plexmetamanager.ign
      - local: services/syncthing.ign
      - local: services/unifi.ign
      - local: services/ytsubs.ign
      - local: services/zap2xml.ign

passwd:
  users:
  {% for user in users %}
    - name: {{ user.name }}
      password_hash: {{ user.password }}
      {% if user.groups is defined %}
      groups:
      {% for group in user.groups %}
        - {{ group }}
      {% endfor %}
      {% endif %}
      {% if user.pubkeys is defined %}
      ssh_authorized_keys:
      {% for key in user.pubkeys %}
        - {{ key }}
      {% endfor %}
      {% endif %}
      {% if user.id is defined %}
      uid: {{ user.id }}
      {% endif %}
  {% endfor %}

storage:
  directories:
    - path: /var/tank
      mode: 0755
      user:
        name: root
      group:
        name: root
    - path: /var/vol
      mode: 0755
      user:
        name: root
      group:
        name: root
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: {{ hostname }}.{{ domain }}
  links:
    - path: /etc/localtime
      target: ../usr/share/zoneinfo/America/New_York
