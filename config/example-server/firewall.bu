variant: fcos
version: 1.6.0

storage:
  files:
    - path: /etc/firewalld/zones/public.xml
      overwrite: true
      contents:
        inline: |
          <?xml version="1.0" encoding="utf-8"?>
          <zone>
            <short>Public</short>
            <service name="ssh"/>
            <service name="mdns"/>
            <service name="dhcpv6-client"/>
            <forward/>
          </zone>
      user:
        name: root
      group:
        name: root
      mode: 0644
